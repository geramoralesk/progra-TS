print("Ejercicio 1")

try:
    numero_entero = int(input("Ingrese un número entero: "))
    

    if numero_entero > 0:
        resultado = "positivo"
    elif numero_entero < 0:
        resultado = "negativo"
    else:
        resultado = "cero"
    

    print(f"El número ingresado es {resultado}.")
except ValueError:
    print("Error: Debe ingresar un número entero válido.")
    